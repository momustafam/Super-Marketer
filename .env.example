# Super Marketer Chatbot Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# GROQ API Configuration (Required for RAG)
# ===========================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192
GROQ_API_BASE=https://api.groq.com/openai/v1

# ===========================================
# ImageKit Configuration (Required for image uploads)
# ===========================================
REACT_APP_IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
REACT_APP_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
REACT_APP_IMAGEKIT_ENDPOINT=your_imagekit_endpoint

# ===========================================
# RAG System Performance Settings (Optional)
# ===========================================
METADATA_CACHE_TTL=3600
QUERY_TIMEOUT=30
MAX_QUERY_RESULTS=100

# ===========================================
# LLM Temperature Settings (Optional)
# ===========================================
ROUTING_TEMPERATURE=0.1
SQL_GENERATION_TEMPERATURE=0.1
RESPONSE_TEMPERATURE=0.3

# ===========================================
# Database Configuration (Docker Internal)
# These are set automatically for Docker, but can be overridden
# ===========================================
DW_SERVER=sql_data_warehouse
DW_PORT=1433
DW_DATABASE=CustomerWarehouse
DW_USERNAME=sa
DW_PASSWORD=YourStrong!Passw0rd

MART_SERVER=sql_marketing_data_mart
MART_PORT=1433
MART_DATABASE=MarketingDataMart
MART_USERNAME=sa
MART_PASSWORD=Password1234!

# ===========================================
# Development Settings (Optional)
# ===========================================
DATABASE_PATH=/data/chatbot.db
LOG_LEVEL=INFO
